{
  "name": "pomodoro-timer-app",
  "version": "1.0.0",
  "description": "A beautiful Pomodoro timer for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.pomodoro-timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns"
    }
  }
}
